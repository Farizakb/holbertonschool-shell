#!/usr/bin/env bash
# Displays "To infinity and beyond" indefinitely and handles signals
# Creates a PID file in /var/run or current directory if /var/run not writable

PID_FILE="/var/run/myscript.pid"
if [ ! -w "/var/run" ]; then
    PID_FILE="./myscript.pid"
fi

echo $$ > "$PID_FILE"

term_handler() {
    echo "I hate the kill command"
}

int_handler() {
    echo "Y U no love me?!"
}

quit_handler() {
    rm -f "$PID_FILE"
    exit 0
}

trap term_handler SIGTERM
trap int_handler SIGINT
trap quit_handler SIGQUIT

while true; do
    echo "To infinity and beyond"
    sleep 2
done
