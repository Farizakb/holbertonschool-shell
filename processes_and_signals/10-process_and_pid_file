#!/usr/bin/env bash
# This script prints "To infinity and beyond" indefinitely and handles signals.

# Create the PID file in current directory
echo $$ > ./myscript.pid

# Handle SIGTERM
trap 'echo "I hate the kill command"' SIGTERM

# Handle SIGINT (Ctrl+C)
trap 'echo "Y U no love me?!"' SIGINT

# Handle SIGQUIT or SIGTERM for cleanup
trap 'rm -f ./myscript.pid; exit' SIGQUIT SIGTERM

# Infinite loop
while true; do
    echo "To infinity and beyond"
    sleep 2
done
