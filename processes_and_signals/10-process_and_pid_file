#!/usr/bin/env bash
# This script prints "To infinity and beyond" indefinitely and handles signals.

PID_FILE="/var/run/myscript.pid"

# Create PID file
echo $$ | sudo tee $PID_FILE > /dev/null

# Handle SIGTERM
trap 'echo "I hate the kill command"' SIGTERM

# Handle SIGINT (Ctrl+C)
trap 'echo "Y U no love me?!"' SIGINT

# Handle SIGQUIT or SIGTERM for cleanup
trap 'sudo rm -f $PID_FILE; exit' SIGQUIT SIGTERM

# Infinite loop
while true; do
    echo "To infinity and beyond"
    sleep 2
done
